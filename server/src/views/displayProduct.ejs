<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        outline: none;
        border: none;
        background: orange;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
    .btn-delete {
        outline: none;
        border: none;
        background: #ff0023;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
    .btn-add-product {
        outline: none;
        border: none;
        background: rgb(3, 243, 3);
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
    .post-product-header{
        text-align: end;
        padding-right: 50px;
        margin: 20px 0;
    }
</style>

<body>
    <div class="post-product-header">
        <a href="/get-display-create-new-product%>" class="btn-add-product" type="button">Add product</a>
    </div>
    <table style="width:100%">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Type of clothes</th>
            <th>Description</th>
            <th>Category</th>
            <th>Size</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].name %>
                </td>
                <td>
                    <%= dataTable[i].price %>
                </td>
                <td>
                    <%= dataTable[i].type_of_clothes %>
                </td>
                <td>
                    <%= dataTable[i].description %>
                </td>
                <td>
                    <%= dataTable[i].cat_id %>
                </td>
                <td>
                    <%= dataTable[i].size %>
                </td>
                <td>
                    <a href="/edit-product?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-product?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>